<Window x:Class="Vosmerka.Windows.EditCostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vosmerka.Windows"
        mc:Ignorable="d"
        Title="Изменение стоимости продукта" Height="150" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Стоимость" Style="{StaticResource TextCommon}"></TextBlock>
                <TextBox x:Name="TBoxCost"></TextBox>
            </StackPanel>
            <Button x:Name="BtnEditCost" Content="Изменить" Click="BtnEditCost_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
